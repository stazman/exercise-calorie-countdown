<h2>Make a new entry</h2>
<%= form_for @countdown do |f| %>
<h3><%= f.label "Today's Date: " %><% Date.today %></h3><br>
<h3><%= f.label "Calories Burned" %></h3>

<%= f.collection_check_boxes :ex_cal_ids, ExCal.all, :id, :calories_burned %><br><br>


      <%= f.fields_for :ex_cals, @countdown.ex_cals.build do |ex_cal_fields|%>
            <%= ex_cal_fields.label "New Standard Amount" %><br>
            <%= ex_cal_fields.text_field :calories_burned %><br><br><br>
<%= f.label "Notes" %><br>
<%= f.text_area :notes %><br><br>
      <% end %>
<h3><%= f.submit "Submit" %></h3>
<% end %>

